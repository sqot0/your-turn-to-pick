---
import Layout from '../layouts/Layout.astro';
import { getRandomMatch } from '@api/index';

let match = await getRandomMatch();

while (match.direHeroes.length !== 5 || match.radiantHeroes.length !== 5) {
  match = await getRandomMatch();
}

import YourTurnToPick from '@components/index';
---

<Layout title="Your Turn To Pick">
  <YourTurnToPick randomMatch={match} client:load />
</Layout>